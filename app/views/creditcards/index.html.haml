.payment
  = render partial: "shared/sidebar"
  .payment__container
    .payment__container__title
      %h2 支払い方法
    -if @creditcards
      .payment__container__box
        %p クレジットカード一覧
        .actions
          = button_to root_path, method: :get, class: "btn action-btn" do
            %i.fas.fa-credit-card
            クレジットカード登録されてるよ
      .payment__container__about
        =link_to "支払い方法について", ""
        %i.fas.fa-chevron-right
    -else
      .payment__container__box
        %p 未登録
        .actions
          = form_tag(action: :register, method: :post) do
            %script.payjp-button{"data-key":'pk_test_0f478928652178c3402b438c', :src => "https://checkout.pay.jp", :type => "text/javascript","data-text" => "登録する"}
      .payment__container__about
        =link_to "支払い方法について", ""
        %i.fas.fa-chevron-right

