    %h2
      = link_to "あきぞーさんのその他の出品" , ""
    %div
      %section.items-box.first-box
        = link_to "" do
          %figure.items-box__photo
            = image_tag("https://static.mercdn.net/thumb/photos/m65147348981_1.jpg?1555494812")
        .items-box__body
          %h3.items-box__name ボーダー
          .items-box__num
            .items-box__price ¥2,980
            .items-box__font
              %i.far.fa-heart
              %span 1
          %p.items-box__tax (税込)
      %section.items-box.other-box
        = link_to "" do
          %figure.items-box__photo
            = image_tag("https://static.mercdn.net/thumb/photos/m34184515003_1.jpg?1555495230")
        .items-box__body
          %h3.items-box__name ボーダー
          .items-box__num
            .items-box__price ¥2,980
            .items-box__font
              %i.far.fa-heart
              %span 5
          %p.items-box__tax (税込)
      %section.items-box.other-box
        = link_to "" do
          %figure.items-box__photo
            = image_tag("https://static.mercdn.net/thumb/photos/m78904710701_1.jpg?1554028260")
        .items-box__body
          %h3.items-box__name ボーダー
          .items-box__num
            .items-box__price ¥3,200
            .items-box__font
              %i.far.fa-heart
              %span 7
          %p.items-box__tax (税込)
