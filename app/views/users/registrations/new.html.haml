%article.maincontent
  %h2.head-title
    新規会員登録
  .content-head
    .content-inner
      = link_to signup_registration_path, class: "btn-mail-link" do
        .btn-mail
          %i.far.fa-envelope
          %span
            メールアドレスで登録
      - if devise_mapping.omniauthable?
        = link_to omniauth_authorize_path(resource_name, :facebook), class: "btn-fb-link-reg" do
          .btn-fb
            %i.fab.fa-facebook
            %span
              Facebookで登録
      - if devise_mapping.omniauthable?
        = link_to omniauth_authorize_path(resource_name, :google_oauth2), class: "btn-ggl-link" do
          .btn-ggl
            %i.fab.fa-google
            %span
              Googleで登録
