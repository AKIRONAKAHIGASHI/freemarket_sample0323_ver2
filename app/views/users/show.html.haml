.container
  = render "shared/sidebar"
  - breadcrumb :users
  .content
    %section.mypage-user-icon
      .icon-tag
        = link_to "", "https://www.mercari.com/jp"
        %figure
          = image_tag("profile_photo.png")
        %h2.bold 山田太郎
        .mypage-number
          .bold
            評価
            %span.bold 0
          .bold
            出品数
            %span.bold 0
    %section.mypage-tab-container-notification-todo
      %ul.mypage-tabs
        %li.news
          %h3
            = link_to "お知らせ", "#mypage-tab-notification"
        %li.todo
          %h3
            = link_to "やることリスト", "mypage-tab-todo"
      .tab-content
        %li.tab-style
          .tab-text
            %figure
              .mercari_icon
                = image_tag("footer_mercari_icon.png")
            .mypage-item-body
              .mypage-item-text メルカリを始めよう
              %time{class: "mypage_link_time"}
              = fa_icon "clock"
              %span 24時間前
            %i.fas.fa-angle-right{class: "s_icon"}
        %li.mypage-go-list
          .ichiran 一覧を見る
        %section
          %h2.mypage-tab-head 購入した商品
          %ul.mypage-tabs
            %li.trading
              %h3.tab 取引中
            %li.past-trading
              %h3.tab 過去の取引
          %ul.mypage-tab-transaction-now 取引中の商品がありません
