        %li
          =image_tag 'footer_mercari_icon.png', width: "65px"
        %li
          = link_to "https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8" do
            = image_tag "app-store.svg", class: :appicon, alt: "", border: :"0"
